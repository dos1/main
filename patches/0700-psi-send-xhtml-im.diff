+		te_->mergeCurrentCharFormat(tcf);
+		break;
+	case StateItalic:
+		tcf.setFontItalic(false);
+		te_->mergeCurrentCharFormat(tcf);
+		break;
+	case StateUnderline:
+		tcf.setFontUnderline(false);
+		te_->mergeCurrentCharFormat(tcf);
+		break;
+	case StateStrikeOut:
+		tcf.setFontStrikeOut(false);
+		te_->mergeCurrentCharFormat(tcf);
+		break;
+	case StateTextStyleChanged:
